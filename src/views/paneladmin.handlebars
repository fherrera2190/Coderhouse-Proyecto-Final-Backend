<main class="container">
  <button
    type="button"
    id="deleteAllUsers"
    class="btn btn-dark my-3"
    data-bs-toggle="modal"
    data-bs-target="#staticBackdrop"
  >
    Delete All Users Inactive
  </button>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Last name</th>
        <th scope="col">Active</th>
        <th scope="col">Rol</th>
        <th scope="col">Options</th>
      </tr>
    </thead>
    <tbody id="tbody">
      {{#each users}}
        <tr>
          <th scope="row">{{this.first_name}}</th>
          <td> {{this.last_name}}</td>
          <td> {{this.Active}}</td>
          <td> {{this.role}}</td>
          <td><i class="bi bi-circle-fill"></i></td>
          <td>
            <div
              class="d-flex align-items-center justify-content-center gap-3 h-100"
            >
              {{#if (isPremium this.role)}}

                <button
                  class="btn btn-info"
                  data-bs-toggle="modal"
                  data-bs-target="#staticBackdrop"
                >
                  <i class="fs-4 bi bi-person-fill-down"></i>
                </button>
              {{else}}
                <button
                  class="btn btn-info disabled"
                  data-bs-toggle="modal"
                  data-bs-target="#staticBackdrop"
                >
                  <i class="fs-4 bi bi-person-fill-down"></i>
                </button>
              {{/if}}
              <button
                onclick="deleteUser('{{this._id}}')"
                class="btn btn-danger"
              ><i class="fs-4 bi bi-trash"></i></button>

            </div>
          </td>
        </tr>
      {{/each}}

    </tbody>
  </table>
</main>
<script src="/js/paneladmin.js"></script>