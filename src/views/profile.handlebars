<main class="container d-flex gap-5">
  <div class="w-100 mt-5">
    <ul class="nav nav-tabs mb-5" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button
          class="nav-link active"
          id="home-tab"
          data-bs-toggle="tab"
          data-bs-target="#home-tab-pane"
          type="button"
          role="tab"
          aria-controls="home-tab-pane"
          aria-selected="true"
        >Profile</button>
      </li>
      {{#if (isPremium user.role)}}
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="profile-tab"
            data-bs-toggle="tab"
            data-bs-target="#profile-tab-pane"
            type="button"
            role="tab"
            aria-controls="profile-tab-pane"
            aria-selected="false"
          >My products</button>
        </li>
      {{/if}}
      <li class="nav-item" role="presentation">
        <button
          class="nav-link"
          id="contact-tab"
          data-bs-toggle="tab"
          data-bs-target="#contact-tab-pane"
          type="button"
          role="tab"
          aria-controls="contact-tab-pane"
          aria-selected="false"
        >Documents</button>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div
        class="tab-pane fade show active w-100"
        id="home-tab-pane"
        role="tabpanel"
        aria-labelledby="home-tab"
        tabindex="0"
      >
        <div class="d-flex gap-5 align-items-center">
          {{#if user.profile}}
            <div class="d-flex gap-3 flex-column align-items-center">
              <img
                src="{{user.profile}}"
                class="img-thumbnail"
                alt="No hay imagen"
                style="width: 200px; height: 200px;"
              />
              <button
                type="button"
                class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#imageProfileChange"
              >
                Change Image Profile
              </button>
            </div>
          {{else}}
            <div class="d-flex gap-3 flex-column align-items-center">
              <img
                src="\profiles\default.webp"
                class="img-thumbnail"
                alt="No hay imagen"
                style="width: 200px; height: 200px;"
              />
              <button
                type="button"
                class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#imageProfileChange"
              >
                Change Image Profile
              </button>
            </div>
          {{/if}}
          <div class="row w-75">
            <div class="col-6">
              <label
                for="exampleFormControlInput1"
                class="form-label"
              >Name</label>
              <input
                disabled
                type="email"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="{{user.first_name}}"
              />
            </div>
            <div class="col-6">
              <label for="exampleFormControlInput1" class="form-label">Last Name</label>
              <input
                disabled
                type="email"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="{{user.last_name}}"
              />
            </div>
            <div class="col-6 mt-3">
              <label
                for="exampleFormControlInput1"
                class="form-label"
              >E-mail</label>
              <input
                disabled
                type="email"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="{{user.email}}"
              />
            </div>
            <div class="col-2 mt-3">
              <label
                for="exampleFormControlInput1"
                class="form-label"
              >Age</label>
              <input
                disabled
                type="email"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="{{user.age}}"
              />
            </div>
            <div class="mt-5"><button
                id="recoverpassword"
                class="btn btn-primary"
              >Reset Password</button>
            </div>
            <div
              class="modal fade"
              id="imageProfileChange"
              tabindex="-1"
              aria-labelledby="imageProfileChangeLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog">
                <form
                  id="imageForm"
                  class="modal-content"
                  action="/api/users/imageProfile"
                  method="post"
                  enctype="multipart/form-data"
                >
                  <div class="modal-header">
                    <h1
                      class="modal-title fs-5"
                      id="imageProfileChangeLabel"
                    >Modal title</h1>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body d-flex flex-column align-items-center">
                    {{#if user.profile}}

                      <img
                        src="{{user.profile}}"
                        class="img-thumbnail"
                        alt="No hay imagen"
                        style="width: 200px; height: 200px;"
                      />

                    {{else}}

                      <img
                        src="\profiles\default.webp"
                        class="img-thumbnail"
                        alt="No hay imagen"
                        style="width: 200px; height: 200px;"
                      />

                    {{/if}}
                    <div class="mt-3 col-md-6">
                      <input
                        class="form-control form-control-sm"
                        id="profile"
                        name="profile"
                        type="file"
                        accept="image/*"
                      />
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >Close</button>
                    <button
                      type="submit"
                      id="buttonImage"
                      onclick="sendFile"
                      class="btn btn-primary"
                    >Save changes</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div
        class="tab-pane fade"
        id="profile-tab-pane"
        role="tabpanel"
        aria-labelledby="profile-tab"
        tabindex="0"
      >...</div>
      <div
        class="tab-pane fade"
        id="contact-tab-pane"
        role="tabpanel"
        aria-labelledby="contact-tab"
        tabindex="0"
      >
        <form
          id="formDocumentation"
          class="row flex flex-column"
          action="/api/users/{{user._id}}/documents"
          method="post"
          enctype="multipart/form-data"
        >

          {{#if user.identification}}
            <p class="fs-5">Your identification has been successfully uploaded.
              <i class="bi bi-check-circle text-success"></i>
            </p>
          {{else}}
            <div class="mb-3 col-md-6">
              <label
                for="identification"
                class="form-label"
              >Identification</label>
              <input
                class="form-control form-control-sm"
                id="identification"
                name="identification"
                type="file"
                accept="image/*"
              />
            </div>
          {{/if}}

          {{#if user.address}}
            <p class="fs-5">Your address has been successfully uploaded.
              <i class="bi bi-check-circle text-success"></i>
            </p>
          {{else}}
            <div class="mb-3 col-md-6">
              <label for="address" class="form-label">Address</label>
              <input
                class="form-control form-control-sm"
                id="address"
                name="address"
                type="file"
                accept="image/*"
              />
            </div>
          {{/if}}
          {{#if user.statusaccount}}
            <p class="fs-5">Your statusaccount has been successfully uploaded.
              <i class="bi bi-check-circle text-success"></i>
            </p>
          {{else}}
            <div class="mb-3 col-md-6">
              <label
                for="statusaccount"
                class="form-label"
              >statusaccount</label>
              <input
                class="form-control form-control-sm"
                id="statusaccount"
                name="statusaccount"
                type="file"
                accept="image/*"
              />
            </div>
          {{/if}}
          {{#unless (isPremium user.role)}}
            <div class="mt-3"><button
                class="btn btn-primary"
              >Upload</button></div>
          {{/unless}}
        </form>
      </div>
    </div>
  </div>
</main>
<script src="/js/profile.js"></script>