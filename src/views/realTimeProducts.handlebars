<main class="container">
  <div class="mt-3">
    <button class="btn btn-dark mb-3"><i class="bi bi-plus-square">
        New product</i></button>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Code</th>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th scope="col">Status</th>
          <th scope="col">Stock</th>
          <th scope="col">Category</th>
          <th scope="col">Menu</th>
        </tr>
      </thead>
      <tbody id="tbody">
        {{#each products}}
          <tr>
            <th scope="row">{{this.code}}</th>
            <td> {{this.title}}</td>
            <td> {{this.description}}</td>
            <td> {{this.price}}</td>
            <td> {{this.status}}</td>
            <td> {{this.stock}}</td>
            <td> {{this.category}}</td>
            <td class="d-flex gap-3 align-items-center h-100">
              <button class="btn btn-info">
                <i class="bi bi-pencil-square"></i>
              </button>
              <button
                onclick="deleteProductAdm('{{this._id}}')"
                class="btn btn-danger"
              ><i class="bi bi-trash"></i></button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</main>
<script src="/js/realtimeproducts.js"></script>